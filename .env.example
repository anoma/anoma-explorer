# Database connection string (PostgreSQL)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=

# Secret key base for Phoenix (generate with: mix phx.gen.secret)
# Used for signing/encrypting cookies and sessions
SECRET_KEY_BASE=

# Phoenix host configuration
# The hostname where the application will be accessible
PHX_HOST=
PHX_SERVER=true

# Server port
PORT=4000

# Envio Hyperindex GraphQL endpoint for indexed blockchain data
ENVIO_GRAPHQL_URL=

# Etherscan V2 API key for contract verification
# Single key works for all supported chains
ETHERSCAN_API_KEY=

# DNS query for cluster discovery (optional, for production clustering)
DNS_CLUSTER_QUERY=

# Database connection pool size (optional, defaults to 10)
POOL_SIZE=10

# Enable IPv6 for database connections (optional)
# Set to "true" or "1" to enable
ECTO_IPV6=

# Admin authorization for production settings (optional)
# When set, edit/delete actions on settings pages require entering this secret key
ADMIN_SECRET_KEY=

# Admin session timeout in minutes (optional, defaults to 30)
ADMIN_TIMEOUT_MINUTES=30
